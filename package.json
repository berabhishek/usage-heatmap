{
  "name": "change-heatmap",
  "displayName": "Change Heatmap",
  "description": "Visualize Git change activity as a code heatmap with optional inline change counts",
  "version": "1.0.2",
  "publisher": "AbhishekBera",
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "heatmap",
    "git",
    "changes",
    "blame",
    "hotspots",
    "code churn",
    "productivity"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:changeHeatmap.toggle",
    "onCommand:changeHeatmap.toggleColor",
    "onCommand:changeHeatmap.toggleText"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "changeHeatmap.toggle",
        "title": "Heatmap: Toggle"
      },
      {
        "command": "changeHeatmap.toggleColor",
        "title": "Heatmap: Toggle Color"
      },
      {
        "command": "changeHeatmap.toggleText",
        "title": "Heatmap: Toggle Text"
      }
    ],
    "configuration": {
      "title": "Change Heatmap",
      "properties": {
        "changeHeatmap.enableColor": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Enable/disable the heatmap background coloring."
        },
        "changeHeatmap.enableText": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Enable/disable the inline info text (e.g., '(X changes)')."
        },
        "changeHeatmap.scale": {
          "type": "string",
          "enum": [
            "linear",
            "logarithmic",
            "exponential"
          ],
          "default": "logarithmic",
          "markdownDescription": "Scale used to map change counts to color bins. 'logarithmic' spreads low-to-moderate changes and prevents saturation at high counts; 'exponential' emphasizes high-change hotspots; 'linear' is uniform."
        },
        "changeHeatmap.exponentialGamma": {
          "type": "number",
          "default": 2,
          "minimum": 1,
          "maximum": 6,
          "markdownDescription": "Exponent (gamma) when 'changeHeatmap.scale' is 'exponential'. Higher values emphasize high-change hotspots more strongly."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "typecheck": "tsc -p ./ --noEmit",
    "precommit:check": "pnpm run lint && pnpm run typecheck",
    "setup:hooks": "git config core.hooksPath .githooks",
    "test": "node ./out/test/runTest.js",
    "test:coverage": "NODE_V8_COVERAGE=coverage node ./out/test/runTest.js",
    "package": "vsce package --no-dependencies --allow-package-all-secrets --allow-package-env-file"
  },
  "packageManager": "pnpm@10.15.1",
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/vsce": "^3.17.0"
  },
  "dependencies": {
    "simple-git": "^3.22.0"
  },
  "author": "Abhishek Ber",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/berabhishek/change-heatmap.git"
  },
  "bugs": {
    "url": "https://github.com/berabhishek/change-heatmap/issues"
  },
  "homepage": "https://github.com/berabhishek/change-heatmap#readme"
}
